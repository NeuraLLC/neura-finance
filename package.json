{
  "name": "neura-finance",
  "version": "0.1.0",
  "description": "AI-powered Payment Service Provider for enterprise clients",
  "author": "Nnaemeka Onukwube",
  "main": "dist/server.js",
  "private": true,
  "license": "ISC",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "bun --watch server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"server.ts\"",
    "lint": "eslint \"src/**/*.ts\" \"server.ts\" --fix",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@sentry/node": "^7.91.0",
    "@supabase/supabase-js": "^2.39.0",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "posthog-node": "^4.0.1",
    "resend": "^6.5.2",
    "stripe": "^14.10.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "server.ts"
    ]
  },
  "overrides": {
    "@types/express": "^4.17.21"
  }
}
